# Basic ZMK Configuration
CONFIG_ZMK=y
CONFIG_ZMK_KEYBOARD_NAME="le_jlwffre"
CONFIG_ZMK_KSCAN_GPIO_DRIVER=y
CONFIG_ZMK_KSCAN_GPIO_MATRIX=y

# USB Configuration
CONFIG_USB_DEVICE_STACK=y
CONFIG_USB_DEVICE_MANUFACTURER="JLW Keyboards"
CONFIG_USB_DEVICE_VID=0x1209
CONFIG_USB_DEVICE_PID=0x0001

# Bluetooth Configuration
CONFIG_BT=y
CONFIG_ZMK_BLE=y

# Core Configuration
CONFIG_SOC_SERIES_NRF52X=y
CONFIG_SOC_FAMILY_NRF=y
CONFIG_BOARD_NICE_NANO_V2=y
CONFIG_USE_DT_CODE_PARTITION=y

# Shield Configuration
CONFIG_SHIELD_LE_JLWFFRE=y

# Debug Configuration
CONFIG_ZMK_USB_LOGGING=n
