#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
            //╭─────────────┬────────────┬──────────┬──────────┬──────────────╮                      ╭──────────────┬───────────┬───────────┬──────────┬───────────╮
            //│    Q        │     W      │    E     │    R     │      T       │                      │      Y       │     U     │     I     │    O     │   P       │
                &mt LSHFT Q      &kp W      &kp E      &kp R        &kp T                                 &kp Y         &kp U      &kp I      &kp O      &kp P     
            //├─────────────┼────────────┼──────────┼──────────┼──────────────┤                      ├──────────────┼───────────┼───────────┼──────────┼───────────┤
            //│     A       │     S      │    D     │    F     │      G       │                      │      H       │     J     │     K     │    L     │   ' "     │
                  &kp A          &kp S       &kp D      &kp F        &kp G                                 &kp H        &kp J       &kp K       &kp L      &kp SQT  
            //├─────────────┼────────────┼──────────┼──────────┼──────────────┤                      ├──────────────┼───────────┼───────────┼──────────┼───────────┤
            //│     Z       │     X      │    C     │    V     │      B       │                      │      N       │     M     │   , <     │   . >    │   / ?     │
                 &lt 3 Z         &kp X       &kp C      &kp V        &kp B                                 &kp N         &kp M     &kp COMMA   &kp DOT   &lt 3 FSLH 
            //╰─────────────┴────────────┴──────────┼──────────┼──────────────┤                      ├──────────────┼───────────┼───────────┴──────────┴───────────╯
                                                  &lt 2 BSPC    &mt LGUI TAB         &kp C_MUTE         &mt RGUI RET     &lt 2 SPACE
            //                                 ╰─────────────┴─────────────────╯                     ╰─────────────────┴───────────────╯
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        num_layer {
            bindings = <
            //╭──────────┬───────────┬─────────────┬──────────────┬─────────────╮      ╭──────────────┬───────────────┬───────────────┬──────────────┬──────────────╮
            //│    !     │     @     │     UP      │       $      │      %      │      │       *      │       7       │       8       │       9      │      +       │
                &kp EXCL     &kp AT      &kp UP         &kp DLLR     &kp PRCNT           &kp STAR        &kp N7          &kp N8          &kp N9         &kp PLUS
            //├──────────┼───────────┼─────────────┼──────────────┼─────────────┤      ├──────────────┼───────────────┼───────────────┼──────────────┼──────────────┤
            //│    (     │    LEFT   │    DOWN     │    RIGHT     │      )      │      │      |       │       4       │       5       │       6      │       -      │
                &kp LPAR    &kp LEFT    &kp DOWN      &kp RIGHT      &kp RPAR             &kp PIPE        &kp N4          &kp N5          &kp N6         &kp MINUS
            //├──────────┼───────────┼─────────────┼──────────────┼─────────────┤      ├──────────────┼───────────────┼───────────────┼──────────────┼──────────────┤
            //│   CAPS   │     ~     │      #      │      ^       │      =      │      │      &       │       1       │       2       │       3      │      0       │
                &kp CAPS   &kp TILDE    &kp HASH      &kp CARET       &kp EQUAL            &kp AMPS        &kp N1          &kp N2          &kp N3         &kp N0
            //╰──────────┴───────────┴─────────────┼──────────────┼─────────────┤      ├──────────────┼───────────────┼───────────────┴──────────────┴──────────────╯
                                                     &trans           &trans     &trans    &trans             &trans
            //                                 ╰──────────────────┴─────────────╯      ╰──────────────┴────────────────────╯
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        fn_layer {
            bindings = <
            //╭──────────┬────────────────┬────────────┬──────────┬──────────╮      ╭──────────┬────────────┬──────────┬──────────┬──────────╮
            //│          │       _        │    ESC     │          │          │      │          │            │          │          │          │
                 &none     &kp UNDERSCORE    &kp ESC     &none       &none             &none        &none       &none      &none      &none
            //├──────────┼────────────────┼──────────┼──────────┼────────────┤      ├──────────┼────────────┼──────────┼──────────┼──────────┤
            //│    [     │                │    ;      │    :      │    ]     │      │          │            │          │          │          │
                &kp LBKT      &none         &kp SEMI    &kp COLON   &kp RBKT           &none        &none       &none      &none      &none
            //├──────────┼────────────────┼──────────┼──────────┼────────────┤      ├──────────┼────────────┼──────────┼──────────┼──────────┤
            //│    {     │                │          │          │      }     │      │          │            │          │          │          │
                &kp LBRC      &none          &none       &none      &kp RBRC           &none     &bt BT_CLR   &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2
            //╰──────────┴────────────────┴──────────┼──────────┼────────────┤      ├──────────┼────────────┼──────────┴──────────┴──────────╯
                                                   &trans           &trans    &trans   &trans       &trans
            //                               ╰──────────────────┴────────────╯      ╰──────────┴──────────────────╯
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        nav_layer {
            bindings = <
            //╭──────────┬──────────┬──────────┬──────────┬──────────╮      ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            //│          │          │          │          │          │      │  HOME    │          │  UP      │          │  PG_UP   │
                &none      &none    &kp LS(LG(N4)) &kp LS(LG(S)) &none         &kp HOME   &none      &kp UP     &none      &kp PG_UP
            //├──────────┼──────────┼──────────┼──────────┼──────────┤      ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //│  LGUI    │  LALT    │  LCTRL   │          │          │      │  END     │  LEFT    │  DOWN    │  RIGHT   │  PG_DN   │
                &kp LGUI   &kp LALT   &kp LCTRL  &none      &none             &kp END    &kp LEFT   &kp DOWN  &kp RIGHT  &kp PG_DN
            //├──────────┼──────────┼──────────┼──────────┼──────────┤      ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //│          │          │          │          │          │      │          │          │          │          │          │
                &none      &none      &kp C_MUTE &kp C_VOL_DN &kp C_VOL_UP    &none      &none      &none      &none      &none
            //╰──────────┴──────────┴──────────┼──────────┼──────────┤      ├──────────┼──────────┼──────────┴──────────┴──────────╯
                                                 &trans     &trans    &trans  &trans     &trans
            //                                 ╰──────────┴──────────╯      ╰──────────┴──────────╯
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
